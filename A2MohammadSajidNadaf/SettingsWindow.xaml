<Window x:Class="A2MohammadSajidNadaf.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A2MohammadSajidNadaf"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800">
    <Grid>
        <Label Content="Select Text Color:" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" FontSize="14"/>
        <ComboBox Name="colorComboBox" HorizontalAlignment="Left" Margin="170,54,0,0" VerticalAlignment="Top" Width="200">
            <ComboBoxItem Content="White"/>
            <ComboBoxItem Content="Red"/>
            <ComboBoxItem Content="Blue"/>
            <ComboBoxItem Content="Green"/>
        </ComboBox>

        <Button Content="Save Text Color" HorizontalAlignment="Left" Margin="50,100,0,0" VerticalAlignment="Top" Width="150" Click="SaveTextColor_Click"/>

        <Button Content="Clear History" HorizontalAlignment="Left" Margin="50,152,0,0" VerticalAlignment="Top" Width="150" Click="ClearHistory_Click"/>

        <Button Content="Close" HorizontalAlignment="Left" Margin="50,197,0,0" VerticalAlignment="Top" Width="150" Click="Close_Click"/>
    </Grid>
</Window>
