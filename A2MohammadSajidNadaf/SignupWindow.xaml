<Window x:Class="A2MohammadSajidNadaf.SignupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A2MohammadSajidNadaf"
        mc:Ignorable="d"
        Title="Signup" Height="450" Width="800">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="294,150,0,0" FontSize="14"/>
        <TextBox Name="txtUsername" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="369,155,0,0" Width="180"/>

        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="294,179,0,0" FontSize="14"/>
        <PasswordBox Name="txtPassword" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="369,184,0,0" Width="180"/>

        <Button Content="Signup" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="400,217,0,0" Width="100" Click="btnSignup_Click"/>
    </Grid>
</Window>
